  <!-- Content -->
      <div class="container pt-2">

<div class = "row ">

<div class= "col-8 pl-6 pt-3 pb-2">
      <h1 class= "text-black display-5"> &nbsp; ‚§¥Ô∏è My Uploads</h1>
</div>
<div class = "col-4 text-right pr-0" style = "padding:none !important;">
             <%= link_to "‚§¥Ô∏è Upload Workflow", new_workflow_path, class:"btn btn-primary  card-hover hvr-float mr-lg-4  mt-3" %>
</div>
</div>
  <div class="pb-5 py-md-3">
    <div class="container">
      <div class="row">
        <div class="col-md-12">


          <!-- Tab content -->

              <div class="row">

                <div class="row justify-content-center">
                  <div class="col-6 pl-3 ml-0 pb-2">
                    <%= will_paginate @uploads, renderer: WillPaginate::ActionView::BootstrapLinkRenderer , class: "container pb-lg-20 mr-0" %>
                  </div>
                  <div class="col-6">

                  <h4 class= "float-right  mr-0">üí°Sorted by : <b>Most Recent</b></h4>
                  </div>

             </div>

                <% @uploads.each do |upload|%>

                <div class="col-lg-3 col-md-6 col-12 ">


                  <!-- Card -->
                  <div class="card  mb-4 card-hover ">
                    <iframe  class="card-img-top" src= <%= Workflow.find(upload.id).loom_url.gsub(/\bshare\b/, 'embed') %> webkitallowfullscreen mozallowfullscreen allowfullscreen alt=""
                        class="card-img-top rounded-top-md"></iframe>
                    <!-- Card body -->
                    <div class="card-body">
                         <h4 class="mb-1 text-truncate-line-2 text-inherit "> <%= link_to Workflow.find(upload.id).title, workflow_path(upload.id)%>
                         </h4>
                        <ul class="mb-0 list-inline">
                        <li class="list-inline-item"><i class="mdi mdi-clock-time-four-outline text-muted"></i><img src="https://res.cloudinary.com/dza6mn30y/image/upload/c_scale,w_15/v1647351098/Pushflo/Category%20Icons/<%= Workflow.find(upload.id).program%>.png" class="pb-1 img-fluid" alt="">&nbsp;<strong><%= link_to Workflow.find(upload.id).program, program_path(filter: Workflow.find(upload.id).program), class:"text-secondary"  %></strong>

                        </li>
                      </ul>


                    </div>
                    <!-- Card footer -->
                    <div class="card-footer">
                      <div class="row align-items-center g-0">
                        <div class="col-auto">
                          <img src="https://res.cloudinary.com/dza6mn30y/image/upload/v1646777172/Pushflo/Avatars/<%=current_user.first_name%>.jpg"  class="rounded-circle avatar-xs" alt="">
                        </div>
                        <div class="col ms-2">
                          <span><%= link_to User.find(Workflow.find(upload.id).user_id).first_name + " " + User.find(Workflow.find(upload.id).user_id).last_name, user_workflows_path(filter:User.find(Workflow.find(upload.id).user_id).user_name ) , class:"text-secondary" %></span>

                        </div>
                        <div class="col-auto">
                          <a href="#" class="removeBookmark">
                            <i class="mdi mdi-bookmark mdi-18px"></i>
                          </a>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>

                <% end %>
                <div class="col-lg-3 col-md-6 col-12">

                <div class="col-lg-3 col-md-6 col-12">

                </div>
                <div class="col-lg-3 col-md-6 col-12">
              </div>
              </div>
            </div>



              </div>
              <div class="row">
                <div class="offset-lg-3 col-lg-6 col-md-12 col-12 text-center mt-5">

                </div>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>

