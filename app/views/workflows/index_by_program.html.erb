<!DOCTYPE html>
<html lang="en">


<body>

  <!-- Page header -->
  <div class=" py-4 py-lg-6">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-xl-12 col-lg-12 col-md-12 col-12">
          <div>
            <h1 class="text-black display-4"><%= params[:filter]%> Workflows</h1>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Content -->
  <div class="py-2">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-12 mb-4">
          <div class="row d-lg-flex justify-content-between align-items-center">
            <div class="col-md-6 col-lg-8 col-xl-9 ">
              <h4 class="mb-3 mb-lg-0">Displaying 9 out of 68 courses</h4>
            </div>
            <div class="d-inline-flex col-md-6 col-lg-4 col-xl-3 ">
              <div class="me-2">
                <!-- Nav -->
                <div class="nav btn-group flex-nowrap" role="tablist">
                  <button class="btn btn-outline-white active" data-bs-toggle="tab" data-bs-target="#tabPaneGrid" role="tab"
                    aria-controls="tabPaneGrid" aria-selected="true">
                    <span class="fe fe-grid"></span>
                  </button>
                  <button class="btn btn-outline-white" data-bs-toggle="tab" data-bs-target="#tabPaneList" role="tab"
                    aria-controls="tabPaneList" aria-selected="false">
                    <span class="fe fe-list"></span>
                  </button>
                </div>
              </div>
              <!-- List  -->
              <select class="selectpicker" data-width="100%">
                <option value="">Sort by</option>
                <option value="Newest">Newest</option>
                <option value="Free">Free</option>
                <option value="Most Popular">Most Popular</option>
                <option value="Highest Rated">Highest Rated</option>
              </select>
            </div>
          </div>
        </div>
        <div class="col-xl-3 col-lg-3 col-md-4 col-12 mb-4 mb-lg-0">
          <!-- Card -->
          <div class="card">
            <!-- Card header -->
            <div class="card-header">
              <h4 class="mb-0"><strong>Filter</strong></h4>
            </div>
            <!-- Card body -->
            <div class="card-body">
              <span class="dropdown-header px-0 mb-2">Program</span>
              <!-- Checkbox -->
              <div class="form-check mb-1">
                <input type="checkbox" class="form-check-input" id="reactCheck" checked>
                <label class="form-check-label" for="reactCheck">Outlook</label>
              </div>
               <!-- Checkbox -->
              <div class="form-check mb-1">
                <input type="checkbox" class="form-check-input" id="javascriptCheck">
                <label class="form-check-label" for="javascriptCheck">Notion</label>
              </div>
               <!-- Checkbox -->
              <div class="form-check mb-1">
                <input type="checkbox" class="form-check-input" id="angularCheck">
                <label class="form-check-label" for="angularCheck">Excel</label>
              </div>
               <!-- Checkbox -->
              <div class="form-check mb-1">
                <input type="checkbox" class="form-check-input" id="nodeCheck">
                <label class="form-check-label" for="nodeCheck">Loom</label>
              </div>
               <!-- Checkbox -->
              <div class="form-check mb-1">
                <input type="checkbox" class="form-check-input" id="angularJSCheck">
                <label class="form-check-label" for="angularJSCheck">Xero</label>
              </div>
               <!-- Checkbox -->
              <div class="form-check mb-1">
                <input type="checkbox" class="form-check-input" id="gatsbyCheck">
                <label class="form-check-label" for="gatsbyCheck">Dext</label>
              </div>
               <!-- Checkbox -->
              <div class="form-check mb-1">
                <input type="checkbox" class="form-check-input" id="graphQlCheck">
                <label class="form-check-label" for="graphQlCheck">Zoom</label>
              </div>
               <!-- Checkbox -->
              <div class="form-check mb-1">
                <input type="checkbox" class="form-check-input" id="vueJsCheck">
                <label class="form-check-label" for="vueJsCheck">Photoshop</label>
              </div>
               <!-- Checkbox -->
              <div class="form-check mb-1">
                <input type="checkbox" class="form-check-input" id="bootstrapCheck">
                <label class="form-check-label" for="bootstrapCheck">Premiere</label>
              </div>
               <!-- Checkbox -->
              <div class="form-check mb-1">
                <input type="checkbox" class="form-check-input" id="figmaCheck">
                <label class="form-check-label" for="figmaCheck">Ableton Live</label>
              </div>
               <!-- Checkbox -->
              <div class="form-check mb-1">
                <input type="checkbox" class="form-check-input" id="sketchCheck">
                <label class="form-check-label" for="sketchCheck">Gmail</label>
              </div>
               <!-- Checkbox -->
              <div class="form-check mb-1">
                <input type="checkbox" class="form-check-input" id="HTML5Check">
                <label class="form-check-label" for="HTML5Check">Snagit</label>
              </div>
            </div>
            <!-- Card body -->

            <!-- Card body -->

          </div>
        </div>
        <!-- Tab content -->

        <div class="col-xl-9 col-lg-9 col-md-8 col-12">
          <div class="tab-content">
            <!-- Tab pane -->

            <div class="tab-pane fade show active pb-4 " id="tabPaneGrid" role="tabpanel" aria-labelledby="tabPaneGrid">

              <div class="row">
              <% @workflows.each do |workflow|%>
                <div class="col-lg-4 col-md-6 col-12">
                  <!-- Card -->


                  <div class="card  mb-4 card-hover">
                  <iframe  class="card-img-top" src= <%= workflow.loom_url.gsub(/\bshare\b/, 'embed') %> alt=""
                        class="card-img-top rounded-top-md"></iframe>
                    <!-- Card body -->
                    <div class="card-body">
                      <h4 class="mb-1 text-truncate-line-2 "><a href="" class="text-inherit"><%= link_to workflow.title, workflow_path(workflow) %></a>
                      </h4>
                       <!-- List inline -->
                      <ul class="mb-0 list-inline">
                        <li class="list-inline-item"><i class="mdi mdi-clock-time-four-outline text-muted"></i><%= workflow.program %>
                        </li>
                      </ul>

                    </div>
                    <!-- Card footer -->
                    <div class="card-footer">
                       <!-- Row -->
                      <div class="row align-items-center g-0">
                        <div class="col-auto">
                          <img src="https://res.cloudinary.com/dza6mn30y/image/upload/v1645874416/Pushflo/Avatars/Copy_of_Dave_odrthq.png" class="rounded-circle avatar-xs" alt="">
                        </div>
                        <div class="col ms-2">
                          <span class=" text-secondary"> <%=  link_to User.find(workflow.user_id).first_name + " " + User.find(workflow.user_id).last_name, user_workflows_path(filter:User.find(workflow.user_id).user_name), class:"text-secondary", style: "" %> </span>

                         </h4>
                        </div>
                        <div class="col-auto">
                         <a href="#" class="text-muted bookmark">
                    <i class="fe fe-bookmark  "></i>
                  </a>

                        </div>
                      </div>
                    </div>
                  </div>
                </div>

<%end%>
<div class= "pb-20"></div>
</body>

</html>
